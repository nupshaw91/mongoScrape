<div class="row">
    <h3 class="card">{{article.Title}}</h3>
    <h5 class="card-panel articleBody">{{body}}</h5>
</div>

<div class="row">
    <div class=" col s2">
        <form action="/comment/{{article._id}}" method="POST" class="card-panel col s8">
            <h5>Comment on this Article</h5>
            <div class="row">
                <div class="input-field col s12">
                    <input id="comments" type="text" placeholder="Name" name="name" class="validate active">
                    <label for="comments">Comment</label>
                </div>

                <div class="input-field col s12">
                    <input id="comment" type="text" placeholder="Comment" name="comment" class="validate">
                    <label for="comment">Comment</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field">
                    <center><input class="btn add-comment-button topnav" type="submit" value="Submit"></input></center>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="row">
    <div class="col s2"></div>
    <div class="col s8">
        <h5>Comments:</h5>
        {{#if article.comment}}
        {{#each article.comment}}
        <div class="card">
            <p id="nameComment">{{name}}</p>
            <p>{{body}}</p>
        </div>
        {{/each}}
        {{else}}
        <p>No Comments Yet.</p>
        {{/if}}

    </div>
</div>


